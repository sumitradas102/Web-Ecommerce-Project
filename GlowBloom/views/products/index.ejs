<% layout('boilerplate') %>

<style>
    body {
        background: linear-gradient(135deg, #ffe6f7, #ffccf9);
        font-family: 'Poppins', sans-serif;
        color: #ff69b4;
        padding: 20px;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        color: #ff1493;
    }

    .card {
        border: none;
        border-radius: 15px;
        background: linear-gradient(135deg, #ffccf9, #ffc1e3);
        box-shadow: 0 4px 10px rgba(255, 105, 180, 0.2);
        margin-bottom: 20px;
        overflow: hidden;
    }

    .card img {
        width: 100%;
        object-fit: cover;
        height: 400px;
    }

    .card-body {
        padding: 20px;
        color: #ff69b4;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #ff1493;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 10px;
    }

    .btn-primary {
        background-color: #ff69b4;
        border: none;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 1rem;
        color: #fff;
        transition: background-color 0.3s, transform 0.3s;
    }

    .btn-primary:hover {
        background-color: #ff1493;
        transform: scale(1.05);
    }
</style>

<h1>All Products</h1>

<div class="container">
    <% for (let product of products) { %>
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img class="img-fluid" alt="<%= product.name %>" src="<%= product.image %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= product.price %>à§³/Quantity</small>
                        </p>
                        <a class="btn btn-primary" href="/product/<%= product._id %>">Buy <%= product.name %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>
