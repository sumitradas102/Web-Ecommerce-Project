<% layout('boilerplate') %>

<div class="card mx-auto" style="width: 25rem;">
  <img src="https://tribeskincare.com.au/cdn/shop/files/Trial-Kit---Normal_Dry_Redness_2048x2048.jpg?v=1686612890" class="card-img-top" alt="..." />
  <div class="card-body" style="color: white;">
    <form class="needs-validation" method="post" action="/user/login" novalidate>
      <div class="mb-3"></div>
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        class="form-control"
        id="username"
        aria-describedby="username"
        name="username"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        />
      </div>
      <div class="valid-feedback">Looks good!</div>

      <div style="display: flex; align-items: center; justify-content: center">
        <button type="submit" class="btn btn-primary">Log in</button>
      </div>

      <p style="color: white; display: flex; justify-content: center">
        Don't have an account? <a href="/user/register" style="color: #ff66b2;">SignUp</a>
      </p>
    </form>
  </div>
</div>

<style>
  body {
    height: 100vh;
    background-image: linear-gradient(rgba(172, 143, 158, 0.8), rgba(235, 211, 223, 0.8)),
      url("https://u-mercari-images.mercdn.net/photos/m46150429639_2.jpg?1660706406");
    background-size: cover;
    background-position: center;
    text-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.5);
    box-shadow: inset 0 0 5rem rgba(0, 0, 0, 0.5);
  }

  .card {
    background: linear-gradient(145deg, #e683b4, #f0b3cb);
    color: white;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 10px 30px rgba(255, 20, 147, 0.4);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: scale(1.05);
    box-shadow: 0 20px 40px rgba(255, 20, 147, 0.6);
  }

  .form-control {
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid #ff66b2;
    color: white;
    padding: 12px;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    border-color: #ff3385;
    background-color: rgba(255, 255, 255, 0.3);
    outline: none;
  }

  .btn {
    width: 100%;
    height: 45px;
    margin-top: 15px;
    background-color: #ff3385;
    color: white;
    font-size: 1.1rem;
    border-radius: 8px;
    border: none;
    transition: all 0.3s ease;
  }

  .btn:hover {
    background-color: #ff66b2;
    box-shadow: 0 4px 12px rgba(255, 105, 180, 0.6);
    cursor: pointer;
  }

  .navbar {
    background-color: #ff3385;
    padding: 15px;
    box-shadow: 0 4px 12px rgba(255, 20, 147, 0.3);
  }

  .navbar .navbar-brand {
    color: white;
    font-weight: bold;
    font-size: 1.5rem;
  }

  .navbar-nav .nav-link {
    color: white;
    font-size: 1.1rem;
    padding: 10px 20px;
    transition: all 0.3s ease;
  }

  .navbar-nav .nav-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    color: #ff66b2;
  }

  .navbar-toggler-icon {
    background-color: white;
  }
</style>
