<% layout('boilerplate') %>

<div class="order-title">
    <h3>Order History</h3>
</div>

<div class="container">
    <% for(r of orders) {%>
        <div class="card mx-auto <%= r.status=='Delivered' ? 'border-success' : 'border-primary' %> mb-3"
            style="max-width: 35rem;">
            <div class="card-header">
                <%= "Product Delivered Successfully" %>
                <span class="badge rounded-pill text-bg-success">Payment Received</span>
            </div>
            <div class="card-body">
                <div style="font-size: 1.4rem;">
                    <p style="color: rgb(255, 255, 255); text-align: center; margin: 0.1px auto 0.1px;">Received Amount : <%= r.price %> TK</p>
                </div>
            </div>
            <hr>
            <p><h6 style="text-align: center; color: #000000;">Delivered products :</h6>
            <ul style="color: #000000;">
                <% for(product of r.product) { %>
                    <li> <em> <%= product %> </em></li>
                <% } %>
            </ul>
            </p>
        </div>
    <% } %>
</div>

<style>

.order-title {
    background: radial-gradient(circle, rgb(255, 66, 167), rgb(255, 167, 211));
    max-width: 160vw;
    text-align: center;
    color: white;
    padding: 15px;
    margin-bottom: 20px;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(255, 20, 147, 0.3);
    font-family: 'Arial', sans-serif;
    font-size: 2.5rem;
    text-transform: uppercase;
    animation: bounce 2s infinite;
}

@keyframes bounce {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-5px);
    }
}

body {
  height: 100vh;
  background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.5)),
    url("https://www.ohmyglam.com/cdn/shop/files/NEW_YEAR_NEW_SKIN_1_1200x1200.jpg?v=1733329230");
  background-size: cover;
  background-position: center;
  text-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.5);
  box-shadow: inset 0 0 5rem rgba(0, 0, 0, 0.5);
  font-family: 'Segoe UI', sans-serif;
}

.container {
    max-width: 160vw;
    overflow-y: auto;
}

.card {
    background: linear-gradient(135deg, #ff3385, #ff66b2);
    color: white;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(255, 20, 147, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 30px rgba(255, 20, 147, 0.6);
}

.card-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 1.4rem;
    padding: 20px;
    font-weight: bold;
    color: white;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 12px 12px 0 0;
}

.card-body {
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: 15px;
    font-size: 1.2rem;
}

.card-body p {
    margin: 5px;
    font-weight: bold;
}

hr {
    border-top: 2px solid #f39cc7;
    margin: 10px 0;
}

ul {
    list-style-type: none;
    padding: 0;
}

ul li {
    font-size: 1.2rem;
    font-style: italic;
}

</style>
