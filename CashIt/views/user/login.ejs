<% layout('boilerplate/boilerplate') %>

<div
  class="card mx-auto"
  style="
    width: 35rem;
    padding: 20px;
    background: linear-gradient(to right, #f8c7d0, #ff85bb);
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(255, 105, 180, 0.3);
  "
>
<img
src="/cashit-logo.png"
class="card-img-top"
alt="Logo"
style="border-radius: 10px; width: 50%; margin-bottom: 20px; display: block; margin-left: auto; margin-right: auto;"
/>

  <div class="card-body">
    <form class="needs-validation" method="post" action="/login" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label" style="color: #ff66a3; font-weight: bold;">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          aria-describedby="username"
          name="username"
          required
          style="border-radius: 10px; border: 1px solid #ff66a3; box-shadow: 0 0 5px rgba(255, 105, 180, 0.5);"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label" style="color: #ff66a3; font-weight: bold;">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
          style="border-radius: 10px; border: 1px solid #ff66a3; box-shadow: 0 0 5px rgba(255, 105, 180, 0.5);"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <button
        type="submit"
        class="btn btn-secondary"
        style="
          width: 100%;
          padding: 12px 20px;
          background: #ff66a3;
          color: white;
          font-weight: bold;
          border-radius: 25px;
          border: none;
          font-size: 1rem;
          cursor: pointer;
          transition: 0.3s ease;
        "
      >
        Log in
      </button>

      <p class="text-muted mt-2 mb-0" style="text-align: center; color: #ff66a3;">
        Don't have an account? <a href="register" style="color: #ff66a3;">Sign Up</a>
      </p>
    </form>
  </div>
</div>

<style>
  .btn:hover {
    background: #ff3385;
    transition: 0.3s ease;
  }

  .card {
    transition: box-shadow 0.3s ease;
  }

  .card:hover {
    box-shadow: 0 6px 20px rgba(255, 105, 180, 0.5);
  }

  .form-control {
    border-radius: 10px;
    padding: 10px;
    border: 1px solid #ff66a3;
  }

  .form-control:focus {
    border-color: #ff3385;
    box-shadow: 0 0 5px rgba(255, 105, 180, 0.7);
  }
</style>
