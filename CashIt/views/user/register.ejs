<% layout('boilerplate/boilerplate') %>
<div
  class="card mx-auto"
  style="
    width: 30rem;
    padding: 16px;
    background: linear-gradient(to bottom, #ffe6f7, #ffcce0);
    border-radius: 15px;
  "
>
<div
    class="blur-background"
    style="
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('pinkmoney.jpg');
      background-size: cover;
      filter: blur(10px);
      z-index: -1;
    "
  ></div>

  <div
    style="
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 20px;
    "
  >
    <img src="/cashit-logo.png" class="card-img-top" alt="Cute Finance" style="border-radius: 10px; width: 80%; margin-top: 15px;" />
    <div class="card-body" style="text-align: center;">
      <h2 style="color: #ff66a3; font-weight: bold; margin-bottom: 15px;">Join CashIt Now!</h2>
      <p style="color: #ff99cc; margin-bottom: 20px;">Your financial journey starts here. Cute, simple, and secure.</p>
      <form
        class="needs-validation"
        method="post"
        action="/register"
        novalidate
      >
        <div class="mb-3" style="text-align: left;">
          <label for="email" class="form-label">Email Address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
          <div id="emailHelp" class="form-text" style="color: #666;">We'll never share your email with anyone else.</div>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3" style="text-align: left;">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3" style="text-align: left;">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3 form-check" style="text-align: left;">
          <input
            type="checkbox"
            class="form-check-input"
            id="exampleCheck1"
            required
          />
          <label class="form-check-label" for="exampleCheck1" style="color: #666;">
            I agree to the
            <a
              href="https://app.termly.io/builder/websites/9c9e659e-002c-4cf1-98df-cb3cf472f893/documents/4386832/Purchases%20and%20Payments/Payments"
              style="color: #ff66a3;"
            >Terms of Service</a>
          </label>
          <div class="invalid-feedback">Please agree to the TOS.</div>
        </div>

        <div style="text-align: center;">
          <button
            type="submit"
            class="btn btn-secondary"
            style="
              background: #ff99cc;
              color: #fff;
              border: none;
              border-radius: 25px;
              padding: 10px 20px;
              font-size: 1rem;
              cursor: pointer;
            "
          >
            Sign Up
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>

.btn:hover {
    background: #ff66a3;
    transition: 0.3s ease;
  }

  .card {
    transition: box-shadow 0.3s ease;
    margin-top: 40px;
  }

  .card:hover {
    box-shadow: 0 4px 15px rgba(255, 105, 180, 0.5);
  }

  .form-control {
    border-radius: 10px;
    padding: 8px;
    border: 1px solid #ff99cc;
  }

  .form-control:focus {
    border-color: #ff66a3;
    box-shadow: 0 0 5px rgba(255, 105, 180, 0.5);
  }
</style>
